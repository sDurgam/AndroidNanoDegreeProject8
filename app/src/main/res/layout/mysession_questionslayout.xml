<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="locale"
    android:layoutDirection="locale">

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/mysession_title"
     android:text="@string/added_questions_name"
     style="@style/titleText"
     android:visibility="gone"/>
  <include layout="@layout/loading_layout"/>

 <ListView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/mysession_listView"
     android:layout_marginTop="@dimen/activity_vertical_margin"
     android:contentDescription="@string/questionsview"
     android:descendantFocusability="afterDescendants"></ListView>
 <TextView
     android:id="@+id/emptySessionView"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     />
</LinearLayout>